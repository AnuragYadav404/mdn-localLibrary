extends layout 

block content 

    h1 #{title} #{genre.name}

    if genreBooks.length 

        p #[strong Delete the following books before attempting to delete this genre]

        dl
            each book in genreBooks 

                dt #[a(href=book.url) #{book.title}]
                dd #{book.summary}
    else    
        p Do you really want to delete this genre?
        form(action="", method="post")
            .form-group 
                input#genreid.form-control(type="hidden" value=genre._id required="true" name="genreid") 
            button.btn.btn-primary(type="submit") Delete genre   
